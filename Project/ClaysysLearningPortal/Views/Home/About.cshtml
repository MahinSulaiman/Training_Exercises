@{
    ViewData["Title"] = "About Us";
}


<div class="about-container">
    <!-- Hero Section -->
    <section class="hero">
        <div class="container text-center">
            <h1>Welcome to Claysys Learning</h1>
            <p>Your gateway to knowledge and career advancement</p>
            <img src="https://wallpapercave.com/wp/wp3194646.jpg" height="200" alt="Learning Portal" class="img-fluid">
        </div>
    </section>



    <!-- Mission Section -->
    <section class="mission py-3">
        <div class="container text-center">
            <h2>Our Mission</h2>
            <p>
                At Claysys Learning, we are dedicated to providing high-quality education to learners across the world.
                Our platform offers a wide variety of online courses to help individuals build new skills, advance in their careers,
                and achieve their goals.ClaySys was founded to deliver technology solutions that positively impacted the business, 
                versus just technology solutions that were technically excellent, but may not have delivered on the key business objectives.
                Our investments into product development to address some of the major holistic pain points related to software development 
                and maintenance, keep us on the cutting edge of technology and well positioned to deliver exponential value to our clients.
            </p>
        </div>
    </section>



     <!-- Features Section --> 
     <section class="features py-5"> 
         <div class="container"> 
            <h2 class="text-center">Features</h2> 
             <div class="row"> 
                 <div class="col-md-4"> 
                     <h3>Wide Course Selection</h3> 
                     <p>Explore thousands of courses in various categories including technology, business, arts, and more.</p> 
                 </div> 
                 <div class="col-md-4"> 
                     <h3>Interactive Learning</h3> 
                    <p>Engage in quizzes, discussions, and projects to enhance your learning experience.</p> 
                 </div> 
                 <div class="col-md-4"> 
                     <h3>Certified Instructors</h3> 
                     <p>Learn from industry experts and certified instructors who are passionate about teaching.</p> 
                 </div> 
             </div> 
         </div> 
     </section> 



    <!-- How it Works Section -->
    <section class="how-it-works py-5">
        <div class="container text-center">
            <h2>How It Works</h2>
            <p>Getting started is easy! Follow these simple steps:</p>
            <ul class="step list-unstyled" >
                <li> 1.Sign up for a free account.</li>
                <li> 2.Browse and choose your favorite courses.</li>
                <li> 3.Start learning at your own pace.</li>
                <li> 4.Earn certificates and apply your new skills!</li>
            </ul>
        </div>
    </section>

    <!-- Team Section -->
    <section class="team py-3">
        <div class="container text-center">
            <h2>Meet the Team</h2>
            <div class="row">
                <div class="col-md-4">
                    <img src="images/team-member-1.jpg" alt="Team Member" class="img-fluid rounded-circle">
                    <h3>John Doe</h3>
                    <p>Founder & CEO</p>
                </div>
                <div class="col-md-4">
                    <img src="images/team-member-2.jpg" alt="Team Member" class="img-fluid rounded-circle">
                    <h3>Jane Smith</h3>
                    <p>Chief Learning Officer</p>
                </div>
                <div class="col-md-4">
                    <img src="images/team-member-3.jpg" alt="Team Member" class="img-fluid rounded-circle">
                    <h3>David Lee</h3>
                    <p>Community Manager</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="testimonials py-3">
        <div class="container text-center">
            <h2>What Our Learners Say</h2>
            <div class="row">
                <div class="col-md-4">
                    <blockquote>
                        "I learned so much from the courses at [Your Portal Name]. The interactive learning and practical exercises really helped me apply the knowledge!"
                    </blockquote>
                    <p>- Sarah, Tech Enthusiast</p>
                </div>
                <div class="col-md-4">
                    <blockquote>
                        "The courses helped me advance my career! The instructors were so helpful and the platform is easy to use."
                    </blockquote>
                    <p>- Mike, Business Professional</p>
                </div>
                <div class="col-md-4">
                    <blockquote>
                        "I’ve completed multiple courses and earned certificates that helped me land my dream job. Thank you, [Your Portal Name]!"
                    </blockquote>
                    <p>- Emily, Job Seeker</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="cta text-center py-3">
        <div class="container">
            <h2>Start Your Learning Journey Today</h2>
            <p>Join thousands of learners who are improving their skills and advancing their careers.</p>
            <a href="/sign-up" class="btn btn-primary">Sign Up Now</a>
        </div>
    </section>
</div>

<!-- Footer Section (optional) -->
@section Scripts {
    <script>
        // Add any specific page-related scripts here if necessary
    </script>
}
