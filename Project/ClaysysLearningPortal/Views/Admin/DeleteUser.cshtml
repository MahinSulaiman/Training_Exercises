@model ClaysysLearningPortal.Models.Users

@{
    Layout = "_LayoutAdmin";
}

<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h4>Confirm Deletion</h4>
                    </div>
                    <div class="card-body">
                        <h5>Are you sure you want to delete this user?</h5>

                        @if (TempData["ErrorMessge"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>Error!</strong> @TempData["ErrorMessge"]
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                        <dl class="row">
                            <dt class="col-sm-4 font-weight-bold">User ID</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.UserId)</dd>

                            <dt class="col-sm-4 font-weight-bold">First Name</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                            <dt class="col-sm-4 font-weight-bold">Last Name</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                            <dt class="col-sm-4 font-weight-bold">Email</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                            <dt class="col-sm-4 font-weight-bold">Gender</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Gender)</dd>

                            <dt class="col-sm-4 font-weight-bold">Date of Birth</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.DateOfBirth)</dd>

                            <dt class="col-sm-4 font-weight-bold">Username</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.UserName)</dd>

                            <dt class="col-sm-4 font-weight-bold">Role</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Role)</dd>
                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
