@model ClaysysLearningPortal.Models.Courses

@{
    ViewData["Title"] = Model.Title;
}
@{
    Layout = "_LayoutAdmin";
}
@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["InfoMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
else if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
else if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<div class="container my-5 p-4 bg-white rounded shadow-sm">
    <h2 class="text-center text-primary mb-4">@Model.Title</h2>

    <!-- Image section -->
    @if (!string.IsNullOrEmpty(ViewBag.Base64Image))
    {
        <div class="text-center mb-4">
            <img src="data:image/png;base64,@ViewBag.Base64Image" alt="Course Image" class="img-fluid" style="max-width: 300px;">
        </div>
    }
    else
    {
        <p class="text-center text-muted">No image available</p>
    }

    <!-- Description section -->
    <p>@Model.Description</p>

    <!-- Video section -->
    @if (!string.IsNullOrEmpty(Model.CourseFile))
    {
        <div class="text-center">
            <iframe src="@Model.CourseFile" width="100%" height="400" class="rounded" allowfullscreen></iframe>
        </div>
    }
    else
    {
        <p class="text-center text-muted">No course file available</p>
    }

    @Html.ActionLink("Edit", "EditCourse", new { courseId=Model.CourseId }) |
    @Html.ActionLink("Delete", "DeleteCourse", new { courseId = Model.CourseId })
</div>

